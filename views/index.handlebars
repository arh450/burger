<h1>Eat A Burger!</h1>

<h2>Burgers not devoured </h2>

<ul class="list">

    {{#each burgers}}
    {{#unless devoured}}

    <li>{{burger_name}} <button class="change-devoured" id="devour-button" data-id="{{id}}">
            Devour!
        </button></li>

    {{/unless}}
    {{/each}}


</ul>

<h2>Burgers devoured </h2>


<ul class="list">

    {{#each burgers}}
    {{#if devoured}}

    <li>{{burger_name}}</li>

    {{/if}}
    {{/each}}


</ul>


<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="newBurger" name="name">
    </div>

    <div class="form-group">
        <label for="burg">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
    </div>

    <button type="submit">Add Burger</button>
</form>