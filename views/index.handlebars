<h1>Eat A Burger!</h1>


<ul>
    {{#each burgers}}
    <li>{{this.burger_name}} {{this.devoured}}</li>
    {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="newBurger" name="name">
    </div>

    <div class="form-group">
        <label for="burg">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Devoured<br>
        <input type="radio" name="devoured" value="0"> Not Devoured
    </div>

    <button type="submit">Add Burger</button>
</form>